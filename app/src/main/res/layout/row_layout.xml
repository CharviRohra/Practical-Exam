<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="5dp"
    android:background="#ABA6AD  ">

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="230dp"
        android:layout_height="28dp"
        android:text="@string/textview"
        android:textColor="#FF0000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/respecialTextView"
        app:layout_constraintTop_toBottomOf="@+id/respecialTextView" />

    <TextView
        android:id="@+id/respecialTextView"
        android:layout_width="264dp"
        android:layout_height="33dp"
        android:layout_marginBottom="8dp"
        android:text="@string/textview"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/resaddTextView"
        app:layout_constraintTop_toBottomOf="@+id/resaddTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/resaddTextView"
        android:layout_width="420dp"
        android:layout_height="37dp"
        android:layout_marginBottom="76dp"
        android:text="@string/textview"
        android:textColor="#0B040D "
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/resTextView" />

    <TextView
        android:id="@+id/resTextView"
        android:layout_width="327dp"
        android:layout_height="34dp"
        android:layout_marginEnd="16dp"
        android:text="@string/textview"
        android:textColor="#AF7AC5"
        android:textSize="27sp"
        app:layout_constraintBottom_toTopOf="@+id/resaddTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>